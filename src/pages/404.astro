---
import Page from "../layouts/Page.astro";
import { Icon } from "astro-icon/components";
import Button from "../components/Button.astro";
//import { SITE } from "../config.ts";

//const meta = {
//  title: SITE.title,
//  description: SITE.description,
//};
---

<Page title="404">
  <div class="flex flex-col items-center justify-center">
    <h2 class="text-4xl m-2">Page Not Found</h2>
    <Icon name="tabler:mood-sad-filled" class="text-sky-500 h-16 w-64 m-2" />
    <h3 class="text-2xl m-2">Lost in the Digital Wilderness</h3>
    <p class="max-w-xl text-center m-2">
      You&apos;ve ventured into uncharted digital territory. The page you seek
      has eluded us. Let&apos;s guide you back to familiar paths.
    </p>
    <div class="mt-8">
    <a href="/" class="group">
        <Button
            >Return Home <Icon
            class="group-hover:-translate-y-0.5 duration-300 ease-in-out"
            id="icon"
            name="tabler:home-share"
            size="28"
            /></Button
        >
    </a>
    </div>
  </div>
</Page>
