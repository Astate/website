---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  visual: ImageMetadata;
  link: string;
}

const { title, description, visual, link } = Astro.props;
---

<div
  class="group overflow-hidden rounded-lg h-full flex flex-col dark:bg-base-dark-800 shadow-lg dark:shadow-dark ring-1 ring-black/5 pt-2"
>
  <div class="grid grid-cols-1 content-between h-full mx-6 mb-6">
    <div class="flex">
      <div class="m-6">
        <div
          class="fill:accent dark:fill-accent-light dark:opacity-95 shrink-0 h-full"
        >
          <Image src={visual} alt="Hero" height="50" />
        </div>
      </div>
      <h3
        class="text-2xl font-bold leading-tight mb-4 dark:opacity-70 self-center"
      >
        <a href={link} class="text-slate-800 dark:text-slate-200">{title}</a>
      </h3>
    </div>

    <div class="self-baseline">
      <div class="text-sm opacity-70">
        {description}
      </div>
    </div>
  </div>
</div>
