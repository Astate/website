<div class="px-14 border rounded-xl">
  <form action="https://formspree.io/veritasfarm@gmail.com" method="POST">
    <div class="flex flex-col max-w-4xl mx-auto">
      <label>
        Name
        <input
          type="text"
          name="name"
          placeholder="Name..."
          required
          class="w-full border-b border-slate-300 bg-slate-200 py-2 px-6 text-base font-medium outline-none focus:border-sky-500 focus:shadow-sm"
        />
      </label>
      <label>
        Email
        <input
          type="email"
          name="email"
          placeholder="Email..."
          required
          class="w-full border-b border-slate-300 bg-slate-200 py-2 px-6 text-base font-medium outline-none focus:border-sky-500 focus:shadow-sm"
        />
      </label>
      <label>
        Subject
        <input
          type="text"
          name="subject"
          placeholder="Applying for KCP..."
          required
          class="w-full border-b border-slate-300 bg-slate-200 py-2 px-6 text-base font-medium outline-none focus:border-sky-500 focus:shadow-sm"
        />
      </label>
      <label>
        Message
        <textarea
          id="message"
          name="message"
          placeholder="Github username..."
          required
          class="w-full border-b border-slate-300 bg-slate-200 py-2 px-6 text-base font-medium outline-none focus:border-sky-500 focus:shadow-sm"
        ></textarea>
      </label>
      <div>
        <input type="text" name="_gotcha" style="display:none" />
      </div>
      <button
        class="max-w-48 my-5 py-2 px-8 text-white font-bold rounded-xl shadow-none transition-duration-200 bg-sky-800 hover:bg-sky-700 pointer-events-auto"
        type="submit"
        >Submit
      </button>
    </div>
  </form>
</div>
