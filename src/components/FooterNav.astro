---
export interface Props{
    title:string,
    navItems:{
        itemText:string,
        itemLink:string
    }[]
}

const {title, navItems} = Astro.props
---

<nav class="space-y-4">
    <h2 class="capitalze font-semibold text-xl">
        {title}
    </h2>
    <div class="h-[2px] w-12 bg-fuchsia-600"></div>
    <ul class="space-y-2 font-medium md:text-sm">
        {navItems.map((navItem)=>(
            <li>
                <a href={navItem.itemLink} class="transition text-slate-500 hover:text-slate-800 dark:hover:text-slate-300">
                    {navItem.itemText}
                </a>
            </li>
        ))

        }
    </ul>
</nav>
