---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description: string;
  visual: ImageMetadata;
}

const { title, description, visual } = Astro.props;
const animation = `duration-300 ease-linear`;
---

<div class=`
  ${animation} group
  relative overflow-hidden rounded-lg h-full
  `>
  <Image
    src={visual}
    alt="Hero"
    height="400"
    class=`
    w-full h-96 object-cover
    ${animation} group-hover:scale-125
    `
  />
  <div
    class=`
  absolute top-0 h-full w-full bg-gradient-to-b from-sky-500 to-sky-900
  ${animation} group-hover:bg-black/60
  `
  >
  </div>
  <div
    class=`
    absolute flex flex-col bottom-0 w-full
    translate-y-[calc(100%-7.5rem)] group-hover:translate-y-0
    content-center
    ${animation}
    `
  >
    <div class=`m-6 ${animation}`>
      <h3 class="text-2xl font-bold leading-tight mb-0 text-white">
        {title}
      </h3>
    </div>
    <div
      class=`self-baseline m-6 opacity-0 group-hover:opacity-100 ${animation}`
    >
      <div class="text-md text-white">
        {description}
      </div>
    </div>
  </div>
</div>
