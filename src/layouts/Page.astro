---
import Layout from "../layouts/Layout.astro";
import "aos/dist/aos.css";

const { title } = Astro.props;
---

<Layout>
  <main class="relative max-w-full pt-24">
    <div class="absolute top-16 left-0 w-full overflow-hidden leading-none">
      <div class="lg:hidden relative bg-sky-800 h-36 -z-40"></div>
      <svg
        class="hidden lg:block relative w-full h-[200px] [transform:rotateY(180deg)] fill-sky-800 -z-50"
        data-name="Layer 1"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1200 120"
        preserveAspectRatio="none"
      >
        <path d="M1200 0L0 0 892.25 114.72 1200 0z"></path>
      </svg>
    </div>
    <div class="flex flex-col mx-auto max-w-full pt-0">
      <div class="mb-24 py-1 leading-2 sm:px-72 max-w-6xl">
        <h2 class="text-white mb-2">{title}</h2>
      </div>
      <div
        data-aos="fade-in"
        data-aos-delay="100"
        data-aos-duration="2500"
        data-aos-easing="ease-in-out-cubic"
      >
        <slot />
      </div>
    </div>
  </main>
</Layout>
<script>
  import AOS from "aos";
  AOS.init();
</script>
